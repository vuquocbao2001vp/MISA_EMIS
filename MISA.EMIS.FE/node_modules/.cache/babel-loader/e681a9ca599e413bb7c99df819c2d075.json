{"ast":null,"code":"import BaseTablePaging from \"../base/BaseTablePaging.vue\";\nimport BaseButton from \"../base/BaseButton.vue\"; // import BaseInput from \"../base/BaseInput.vue\";\n\nimport DialogStaffDetail from \"../dialog/DialogStaffDetail.vue\";\nimport BaseCheckbox from \"../base/BaseCheckbox.vue\";\nimport BaseLoader from \"../base/BaseLoader.vue\";\nimport BaseToast from \"../base/BaseToast.vue\";\nimport BasePopup from \"../base/BasePopup.vue\";\nimport axios from \"axios\";\nexport default {\n  components: {\n    BaseLoader,\n    BaseTablePaging,\n    BaseButton,\n    // BaseInput,\n    DialogStaffDetail,\n    BaseCheckbox,\n    BaseToast,\n    BasePopup\n  },\n\n  created() {\n    this.loadData(50, 1, '');\n  },\n\n  props: [],\n\n  data() {\n    return {\n      isHideLoader: false,\n      isShowDialog: false,\n      isHideToast: true,\n      isHidePopup: true,\n      staffs: {},\n      staffSelected: {},\n      staffSelectedId: null,\n      btnSaveMode: 0,\n      totalResult: null,\n      totalPage: null,\n      currentPage: null,\n      pageSize: null,\n      pageNumber: null,\n      filterName: null,\n      inputTextSearch: null,\n      outputTextSearch: null,\n      timeout: null,\n      rowStaff: []\n    };\n  },\n\n  watch: {\n    /**\r\n     * khi người dùng nhập xong thì thực hiện gọi api lấy dữ liệu theo từ khóa tìm kiếm\r\n     * Author: VQBao - 27/7/2022\r\n     */\n    outputTextSearch: function (value) {\n      try {\n        console.log(value);\n        this.loadData(50, 1, value);\n      } catch (error) {\n        console.log(error);\n      }\n    }\n  },\n  methods: {\n    /**\r\n     * khi người dùng nhập vào ô search input, sau khi ngừng 1 giây thì lấy ra giá trị vừa nhập xong\r\n     * Author: VQBao - 27/7/2022\r\n     */\n    searchByText() {\n      clearTimeout(this.timeout);\n      var self = this;\n      this.timeout = setTimeout(function () {\n        self.outputTextSearch = self.inputTextSearch;\n      }, 800);\n    },\n\n    /**\r\n     * thực hiện tải dữ liệu thông tin giáo viên và hiển thị trên bảng\r\n     * Author: VQBao - 21/7/2022\r\n     */\n    loadData(pageSize, pageNumber, filterName) {\n      this.pageSize = pageSize;\n      this.pageNumber = pageNumber;\n      this.filterName = filterName;\n      var baseURL = \"https://cukcuk.manhnv.net/api/v1/Employees/filter\";\n      this.isHideLoader = false;\n      var me = this; // loadData khi chưa có thông tin tìm kiếm\n\n      if (filterName == '') {\n        try {\n          axios.get(baseURL + \"?pageSize=\" + me.pageSize + \"&pageNumber=\" + me.pageNumber).then(function (respond) {\n            // ẩn loading\n            me.isHideLoader = true;\n            me.staffs = respond.data.Data;\n            me.totalResult = respond.data.TotalRecord;\n            me.totalPage = respond.data.TotalPage;\n            me.currentPage = respond.data.CurrentPage;\n          }).catch(function (res) {\n            console.log(res);\n          });\n        } catch (error) {\n          console.log(error);\n        }\n      } // loadData khi có từ khóa tìm kiếm\n      else {\n        try {\n          axios.get(baseURL + \"?pageSize=\" + me.pageSize + \"&pageNumber=\" + me.pageNumber + \"&employeeFilter=\" + me.filterName).then(function (respond) {\n            // ẩn loading\n            me.isHideLoader = true;\n            me.staffs = respond.data.Data;\n            me.totalResult = respond.data.TotalRecord;\n            me.totalPage = respond.data.TotalPage;\n            me.currentPage = respond.data.CurrentPage;\n          }).catch(function (res) {\n            console.log(res);\n          });\n        } catch (error) {\n          console.log(error);\n        }\n      }\n    },\n\n    /**\r\n     * khi bấm thêm thì form chi tiết giáo viên hiện ra\r\n     * Author: VQBao - 21/7/2022\r\n     */\n    addStaffOnClick() {\n      // btnSaveMode = 1 => thực hiện thêm mới\n      this.btnSaveMode = 1;\n      this.showStaffDialog(true);\n      this.staffSelected = {};\n      this.staffSelectedId = null;\n      var me = this; // gọi api lấy mã nhân viên mới\n\n      axios.get(\"https://cukcuk.manhnv.net/api/v1/Employees/NewEmployeeCode\").then(response => {\n        me.staffSelected.EmployeeCode = response.data;\n      }).catch(() => {\n        console.error(\"Lấy mã nhân viên mới không thành công\");\n      });\n    },\n\n    /**\r\n     * Thay đổi trạng thái ẩn hiện của form thêm mới\r\n     * @param {Boolean} iShow - true: hiển thị, false: ẩn đi\r\n     * Author: VQBao - 21/7/2022\r\n     */\n    showStaffDialog(isShow) {\n      this.isShowDialog = isShow;\n    },\n\n    /**\r\n     * Thay đổi trạng thái ẩn hiện của toast mesage\r\n     * Author: VQBao - 23/7/2022\r\n     */\n    hideToastMessage(isHide) {\n      this.isHideToast = isHide;\n    },\n\n    /**\r\n     * Thay đổi trạng thái ẩn hiện của popup thông báo\r\n     * Author: VQBao - 23/7/2022\r\n     */\n    hidePopup(isHide) {\n      this.isHidePopup = isHide;\n    },\n\n    /**\r\n     * Khi nhấn vào tên hoặc icon sửa trong bảng, hiện form thông tin chi tiết\r\n     * Author: VQBao - 21/7/2022\r\n     */\n    rowOnClick(staff) {\n      // btnSaveMode = 0 => thực hiện sửa\n      this.btnSaveMode = 0;\n      this.staffSelected = staff;\n      this.staffSelectedId = staff.EmployeeId;\n      this.showStaffDialog(true);\n    },\n\n    /**\r\n     * khi bấm vào icon xóa thì thực hiện xóa dòng dữ liệu giáo viên đó\r\n     * Author: VQBao - 21/7/2022\r\n     */\n    removeStaffOnClick(staff) {\n      var me = this;\n      me.isHideLoader = false;\n      me.hidePopup(false);\n      axios.delete(`https://cukcuk.manhnv.net/api/v1/Employees/${staff.EmployeeId}`).then(() => {\n        me.loadData(50, 1, '');\n        me.hideToastMessage(false);\n        setTimeout(function () {\n          me.hideToastMessage(true);\n        }, 3000);\n      }).catch(() => {\n        console.log(\"Xóa lỗi\");\n      });\n    },\n\n    /**\r\n     * Thực hiện lấy object giáo viên khi tích chọn 1 hoặc nhiều checkbox\r\n     * Author: VQBao - 22/7/2022\r\n     */\n    rowCheckboxSelected(staff) {\n      this.staffSelected = staff;\n      this.staffSelectedId = staff.EmployeeId;\n      this.rowStaff.push(this.staffSelected);\n    },\n\n    /**\r\n     * Thực hiện xóa hàng loạt\r\n     * Author: VQBao - 28/7/2022\r\n     */\n    removeStaffsOnClick() {\n      for (let i = 0; i < this.rowStaff.length; i++) {\n        this.removeStaffOnClick(this.rowStaff[i]);\n      }\n\n      this.rowStaff = [];\n    },\n\n    /**\r\n     * Thực hiện check all\r\n     * Author: VQBao - 28/7/2022\r\n     */\n    checkAllCheckbox() {\n      for (let i = 0; i < this.staffs.length; i++) {\n        this.rowStaff.push(this.staffs[i]);\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAuHA,OAAOA,eAAP,MAA4B,6BAA5B;AACA,OAAOC,UAAP,MAAuB,wBAAvB,C,CACA;;AACA,OAAOC,iBAAP,MAA8B,iCAA9B;AACA,OAAOC,YAAP,MAAyB,0BAAzB;AACA,OAAOC,UAAP,MAAuB,wBAAvB;AACA,OAAOC,SAAP,MAAsB,uBAAtB;AACA,OAAOC,SAAP,MAAsB,uBAAtB;AACA,OAAOC,KAAP,MAAkB,OAAlB;AACA,eAAe;EACbC,UAAU,EAAE;IACVJ,UADU;IAEVJ,eAFU;IAGVC,UAHU;IAIV;IACAC,iBALU;IAMVC,YANU;IAOVE,SAPU;IAQVC;EARU,CADC;;EAWbG,OAAO,GAAG;IACR,KAAKC,QAAL,CAAc,EAAd,EAAkB,CAAlB,EAAoB,EAApB;EACD,CAbY;;EAcbC,KAAK,EAAE,EAdM;;EAebC,IAAI,GAAG;IACL,OAAO;MACLC,YAAY,EAAE,KADT;MAELC,YAAY,EAAE,KAFT;MAGLC,WAAW,EAAE,IAHR;MAILC,WAAW,EAAE,IAJR;MAKLC,MAAM,EAAE,EALH;MAMLC,aAAa,EAAE,EANV;MAOLC,eAAe,EAAE,IAPZ;MAQLC,WAAW,EAAE,CARR;MASLC,WAAW,EAAE,IATR;MAULC,SAAS,EAAE,IAVN;MAWLC,WAAW,EAAE,IAXR;MAYLC,QAAQ,EAAE,IAZL;MAaLC,UAAU,EAAE,IAbP;MAcLC,UAAU,EAAE,IAdP;MAeLC,eAAe,EAAE,IAfZ;MAgBLC,gBAAgB,EAAE,IAhBb;MAiBLC,OAAO,EAAE,IAjBJ;MAkBLC,QAAQ,EAAE;IAlBL,CAAP;EAoBD,CApCY;;EAqCbC,KAAK,EAAE;IACL;;;;IAIAH,gBAAgB,EAAE,UAASI,KAAT,EAAgB;MAChC,IAAI;QACFC,OAAO,CAACC,GAAR,CAAYF,KAAZ;QACA,KAAKtB,QAAL,CAAc,EAAd,EAAkB,CAAlB,EAAqBsB,KAArB;MACF,CAHA,CAGE,OAAOG,KAAP,EAAc;QACdF,OAAO,CAACC,GAAR,CAAYC,KAAZ;MACF;IACF;EAZK,CArCM;EAmDbC,OAAO,EAAE;IACP;;;;IAIAC,YAAY,GAAG;MACbC,YAAY,CAAC,KAAKT,OAAN,CAAZ;MACA